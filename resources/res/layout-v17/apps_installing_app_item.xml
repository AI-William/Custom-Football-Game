                <ProgressBar android:id="@+id/apps_installing_progress_bar" android:layout_width="match_parent" android:layout_height="4dp" android:indeterminate="true" style="?android:attr/progressBarStyleHorizontal"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/apps_download_download_info_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:ellipsize="end" android:id="@+id/apps_installing_download_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apps_short_installing" android:maxLines="1" style="@style/Aptoide.TextView.Medium.XS.Grey"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.p001v7.widget.CardView>
